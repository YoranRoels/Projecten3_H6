<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        card_view:contentPaddingTop="5dp"
        card_view:contentPaddingBottom="5dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="15dp"
        android:id="@+id/card_viewCH"
        card_view:cardBackgroundColor="@color/contentColor"
        card_view:cardCornerRadius="5dp"
        android:layout_marginBottom="0.25dp">

            <LinearLayout
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/challengeTitle"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Gather some Carroters"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/challengeDescription"
                    android:text= "prepare a vegan dinner with friends"/>

            </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>