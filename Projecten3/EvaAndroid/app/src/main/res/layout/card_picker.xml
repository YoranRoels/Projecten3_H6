<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        card_view:contentPaddingTop="15dp"
        card_view:contentPaddingBottom="15dp"
        card_view:contentPaddingLeft="20dp"
        card_view:contentPaddingRight="20dp"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="@color/contentColor"
        card_view:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/dish_placeholder"
                android:id="@+id/pickerDishImage"/>

            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressPickerCardDishTitle"
                    android:text=""/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp">

                <Button
                    android:id="@+id/chooseDishButton"
                    android:text="@string/plus"
                    android:textColor="@color/contentColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/dish_picker_button"
                    android:textSize="25sp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>