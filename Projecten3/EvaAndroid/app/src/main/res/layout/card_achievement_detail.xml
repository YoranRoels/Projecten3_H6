<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        card_view:contentPaddingTop="5dp"
        card_view:contentPaddingBottom="5dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="15dp"
        android:id="@+id/card_viewAD"
        card_view:cardBackgroundColor="@color/contentColor"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="0.25dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/achievementDetailImage"
                android:src="@drawable/carrot_trophy" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/achievementDetailTitle"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:text="Weâ€™re Just Getting Started"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/achievementDetailDescription"
                    android:text= "Launch the app."/>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>